<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ImageTextView">
    <attr name="android:textSize"/>
    <attr name="android:textColor"/>
    <attr name="textColorStateChecked" format="color" localization="suggested"/>
    <attr name="android:text"/>
    <attr name="iconColor" format="color" localization="suggested"/>
    <attr name="iconColorStateChecked" format="color" localization="suggested"/>
    <attr name="iconSrc" format="reference" localization="suggested"/>
    <attr name="iconBackgroundColor" format="color" localization="suggested"/>
    <attr name="iconBackgroundColorStateChecked" format="color" localization="suggested"/>
    <attr name="iconSize" format="dimension" localization="suggested"/>
    <attr name="iconRadius" format="dimension" localization="suggested"/>
    <attr name="iconPadding" format="dimension" localization="suggested"/>
    <attr name="textRelative" format="integer" localization="suggested">
        <enum name="right" value="0" />
        <enum name="bottom" value="1" />
        <enum name="center" value="2" />
    </attr>
</declare-styleable>
    <declare-styleable name="MaterialRippleLayout">
        // color of ripple
        <attr name="mrl_rippleColor" format="color" localization="suggested" />

        // radius of hover and starting ripple
        <attr name="mrl_rippleDimension" format="dimension" localization="suggested" />

        // if true, ripple is drawn in foreground; false - background
        <attr name="mrl_rippleOverlay" format="boolean" localization="suggested" />

        // alpha of ripple
        <attr name="mrl_rippleAlpha" format="float" localization="suggested" />

        // duration of ripple animation
        <attr name="mrl_rippleDuration" format="integer" localization="suggested" />

        // duration of fade out effect on ripple
        <attr name="mrl_rippleFadeDuration" format="integer" localization="suggested" />

        // if true, a hover effect is drawn when view is touched
        <attr name="mrl_rippleHover" format="boolean" localization="suggested" />

        // background under ripple drawable; used with rippleOverlay="false"
        <attr name="mrl_rippleBackground" format="color" localization="suggested" />

        // if true, delays calls to OnClickListeners until ripple effect ends
        <attr name="mrl_rippleDelayClick" format="boolean" localization="suggested" />

        // if true, ripple background color persists after animation, until setRadius(0) is called
        <attr name="mrl_ripplePersistent" format="boolean" localization="suggested" />

        / if true, MaterialRippleLayout will optimize for use in AdapterViews
        <attr name="mrl_rippleInAdapter" format="boolean" localization="suggested" />

        // radius of corners of ripples. Note: it uses software rendering pipeline for API 17 and below
        <attr name="mrl_rippleRoundedCorners" format="dimension" localization="suggested" />
    </declare-styleable>
    <declare-styleable name="FadingEdgeLayout">
        <attr name="fel_edge" format="integer">
            <flag name="top" value="1"/>
            <flag name="bottom" value="2"/>
            <flag name="left" value="4"/>
            <flag name="right" value="8"/>
        </attr>
        <attr name="fel_size_top" format="dimension"/>
        <attr name="fel_size_bottom" format="dimension"/>
        <attr name="fel_size_left" format="dimension"/>
        <attr name="fel_size_right" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>

    <declare-styleable name="Cookie">
        <attr name="cookieTitleColor" format="color"/>
        <attr name="cookieMessageColor" format="color"/>
        <attr name="cookieActionColor" format="color"/>
        <attr name="cookieBackgroundColor" format="color"/>

        <attr name="cookieTitleSize" format="dimension"/>
        <attr name="cookieMessageSize" format="dimension"/>
        <attr name="cookieActionSize" format="dimension"/>
        <attr name="cookiePadding" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="PageIndicatorView">
        <attr name="piv_orientation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>

        <attr name="piv_viewPager" format="reference" />
        <attr name="piv_select" format="integer" />

        <attr name="piv_count" format="integer" />
        <attr name="piv_dynamicCount" format="boolean" />

        <attr name="piv_radius" format="dimension" />
        <attr name="piv_padding" format="dimension" />
        <attr name="piv_strokeWidth" format="dimension" />
        <attr name="piv_scaleFactor" format="float" />
        <attr name="piv_autoVisibility" format="boolean" />

        <attr name="piv_unselectedColor" format="color" />
        <attr name="piv_selectedColor" format="color" />

        <attr name="piv_interactiveAnimation" format="boolean" />
        <attr name="piv_animationDuration" format="integer" />
        <attr name="piv_animationType">
            <enum name="none" value="0" />
            <enum name="color" value="1" />
            <enum name="scale" value="2" />
            <enum name="worm" value="3" />
            <enum name="slide" value="4" />
            <enum name="fill" value="5" />
            <enum name="thinWorm" value="6" />
            <enum name="drop" value="7" />
            <enum name="swap" value="8" />
            <enum name="scale_down" value="9" />
        </attr>
        <attr name="piv_rtl_mode">
            <enum name="on" value="0" />
            <enum name="off" value="1" />
            <enum name="auto" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SliderView">

        <attr name="sliderIndicatorOrientation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>

        <attr name="sliderIndicatorEnabled" format="boolean" />
        <attr name="sliderIndicatorRadius" format="dimension" />
        <attr name="sliderIndicatorPadding" format="dimension" />
        <attr name="sliderIndicatorMargin" format="dimension" />
        <attr name="sliderIndicatorMarginLeft" format="dimension" />
        <attr name="sliderIndicatorMarginRight" format="dimension" />
        <attr name="sliderIndicatorMarginTop" format="dimension" />
        <attr name="sliderIndicatorMarginBottom" format="dimension" />

        <attr name="sliderIndicatorGravity">
            <flag name="bottom" value="80" />
            <flag name="center" value="17" />
            <flag name="center_horizontal" value="1" />
            <flag name="center_vertical" value="16" />
            <flag name="clip_horizontal" value="8" />
            <flag name="clip_vertical" value="128" />
            <flag name="end" value="8388613" />
            <flag name="fill" value="119" />
            <flag name="fill_horizontal" value="7" />
            <flag name="fill_vertical" value="112" />
            <flag name="left" value="3" />
            <flag name="right" value="5" />
            <flag name="start" value="8388611" />
            <flag name="top" value="48" />
        </attr>

        <attr name="sliderIndicatorUnselectedColor" format="color" />
        <attr name="sliderIndicatorSelectedColor" format="color" />
        <attr name="sliderIndicatorAnimationDuration" format="integer" />
        <attr name="sliderAnimationDuration" format="integer" />

        <attr name="sliderIndicatorRtlMode">
            <enum name="on" value="0" />
            <enum name="off" value="1" />
            <enum name="auto" value="2" />
        </attr>

        <attr name="sliderScrollTimeInSec" format="integer" />
        <attr name="sliderAutoCycleEnabled" format="boolean" />
        <attr name="sliderStartAutoCycle" format="boolean" />

        <attr name="sliderAutoCycleDirection">
            <enum name="right" value="0" />
            <enum name="left" value="1" />
            <enum name="back_and_forth" value="2" />
        </attr>

    </declare-styleable>
</resources>