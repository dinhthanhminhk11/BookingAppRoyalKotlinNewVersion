<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="@dimen/_30dp"
    android:paddingHorizontal="@dimen/_30dp"
    android:background="@drawable/background_dialog_comfirm"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Woo hoo!"
        android:textColor="@color/black"
        android:textSize="@dimen/_25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/contentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20dp"
        android:text="@string/textLogout1"
        android:textColor="#66727C"
        android:textSize="@dimen/_18sp" />

    <Button
        app:backgroundTint="@null"
        android:background="@drawable/background_button_dialog"
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_30dp"
        android:text="@string/sign_in_login" />
</LinearLayout>