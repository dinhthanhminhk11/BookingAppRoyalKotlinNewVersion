<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_200dp"
    android:layout_height="@dimen/_150dp"
    android:background="@drawable/background_border_feedback"
    android:orientation="vertical"
    android:layout_marginEnd="@dimen/_15dp">
    <LinearLayout
        android:id="@+id/lnDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="7dp">
        <com.example.bookingapproyalkotlinver3.ui.customview.circleimageview.CircleImageView
            android:id="@+id/imgUser"
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_10dp">
            <TextView
                android:id="@+id/tvNameUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:alpha="0.8"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_14sp"/>
            <TextView
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.6"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sp"
                android:fontFamily="@font/poppins_medium"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lnSao"
        android:layout_width="@dimen/_100dp"
        android:layout_height="@dimen/_13dp"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/_8dp">
        <ImageView
            android:id="@+id/imgStar1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_star_no_click" />

        <ImageView
            android:id="@+id/imgStar2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_star_no_click" />

        <ImageView
            android:id="@+id/imgStar3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_star_no_click" />

        <ImageView
            android:id="@+id/imgStar4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_star_no_click"/>

        <ImageView
            android:id="@+id/imgStar5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_star_no_click" />

    </LinearLayout>
    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:textSize="@dimen/_14sp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        android:alpha="0.7" />
    <TextView
        android:visibility="gone"
        android:id="@+id/tvShowFeedback"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        android:textSize="@dimen/_15sp"
        android:alpha="0.8"
        android:gravity="center" />
</LinearLayout>